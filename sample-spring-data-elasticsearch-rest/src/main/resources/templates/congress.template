{    "index_patterns": "congress-*",    "settings" : {        "number_of_shards" : 1,        "refresh_interval" : "1s",        "number_of_replicas" : 1,        "store.type": "fs"    },    "aliases" : {        "congress" : {}    },    "mappings": {      "congress": {        "properties": {          "name": {            "type": "text",            "copy_to": "search_fieds",            "fielddata": true          },          "description": {            "type": "text",            "copy_to": "search_fieds"          },          "startDate": {            "type":   "date",            "format": "yyyy-MM-dd",            "copy_to": "search_fieds"          },          "endDate": {            "type":   "date",            "format": "yyyy-MM-dd",            "copy_to": "search_fieds"          },          "address": {            "type": "nested",            "properties": {                "street": {                    "type": "text",                    "copy_to": "search_fieds"                },                "zipCode": {                    "type": "keyword",                    "copy_to": "search_fieds"                },                "city": {                    "type": "keyword",                    "copy_to": "search_fieds"                },                "location": {                    "type": "geo_point"                }            }          },          "search_fieds": {            "type": "text"          }        }      }    }}